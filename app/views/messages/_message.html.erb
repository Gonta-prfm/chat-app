<div class="message">
  <div class="up-message">
    <div class="user-name">
      <%= message.user.name %>
    </div>
    <div class="day-time">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="low-message">
    <div class="message-content">
     <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>